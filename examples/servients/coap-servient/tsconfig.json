{
    "compilerOptions": {
        "target": "ES2016",
        "lib": ["es2016", "dom"],
        "module": "commonjs",
        "outDir": "dist",
        "alwaysStrict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "declaration": true
    },
    "include": ["src/**/*"]
}
